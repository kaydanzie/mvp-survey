<%= form_with model: @user, url: user_path(@user), remote: true do |form| %>
  <div class="row justify-content-center mt-4">
    <div class="col-lg-3 col-md-4">
      <p class="text-center">Select which office you're in. You only have to do this once.</p>
      <div class="form-group">
        <%= form.label :office %>
        <%= form.select :office, User::OFFICES, { include_blank: false }, class: "form-control custom-select" %>

        <div class="invalid-feedback">
          <span><%= @user.errors[:office].first %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-3 text-center">
      <%= form.submit "Continue", class: 'btn btn-primary-blue' %>
    </div>
  </div>
<% end %>
