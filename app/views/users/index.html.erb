<h1>All Employees</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <% if current_user.super_admin? %>
        <th scope="col">Role</th>
        <th scope="col">Office</th>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= full_name(u) %></td>
        <td><%= u.email %></td>
        <% if current_user.super_admin? %>
          <td><%= u.role.titleize %></td>
          <td><%= u.office %></td>
          <td><%= link_to "Edit", edit_user_path(u), remote: true %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="user-modal" tabindex="-1" role="dialog"></div>
