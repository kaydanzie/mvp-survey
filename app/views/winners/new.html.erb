<div class="row mt-3">
  <div class="col">
    <h1 class="text-center"><%= "#{@survey.name} Nominees" %></h1>

    <%= form_with model: @winner, url: [@survey, @winner], local: true do |form| %>
      <div class="row justify-content-center">
        <div class="col-10 col-lg-4">
          <div class="form-group">
            <p class="small">Select one winner from the list of nominees below.</p>
            <%= form.select :user_id, @survey.uniq_nominees.collect { |nom| [ nom.full_name, nom.id ] }, { include_blank: 'Select a nominee for MVP' }, class: 'form-control' %>

            <div class="invalid-feedback">
              <span><%= @winner.errors[:user_id].join(", ") %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="row justify-content-center py-3">
        <div class="col-12 text-center"><%= form.submit 'Submit', class: 'btn btn-primary-blue py-3 px-5' %></div>
        <div class="col-12 text-center py-3"><%= link_to 'Back', surveys_path, class: "tertiary-link" %></div>
      </div>
    <% end %>
  </div>
</div>
