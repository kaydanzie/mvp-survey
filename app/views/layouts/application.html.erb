<!DOCTYPE html>
<html>
  <head>
    <title>MVP Survey</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= favicon_link_tag asset_path('ffi-favicon.png'), rel: 'icon', type: 'image/x-icon' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="ffi-default-theme <%= controller.controller_name %>"
        data-controller="<%= controller.controller_path %>"
        data-action="<%= controller.action_name %>">

    <%= render 'layouts/navbar' %>
    <%= render 'layouts/flash_notices' %>

    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
