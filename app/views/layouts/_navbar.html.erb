<nav class="navbar navbar-expand-lg">
  <%= link_to(image_tag('ffi-logo.svg', height: '20', width: '144', alt: 'FFI Logo'), root_path, class: 'navbar-brand') %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mvp-survey-navbar-toggler">
    <span class="navbar-toggler-icon"><%= image_tag 'user.png' %></span>
  </button>

  <div class="collapse navbar-collapse" id="mvp-survey-navbar-toggler">
    <ul class="navbar-nav mr-auto mt-2">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Employees", users_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>

    <span class="auth">
      <% if user_signed_in? %>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <%= current_user.first_name %>
          </button>
          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to 'Logout', destroy_user_session_path, method: 'delete', class: 'dropdown-item' %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Login', user_google_oauth2_omniauth_authorize_path, class: 'btn btn-outline-primary', id: 'button-login' %>
      <% end %>
    </span>
  </div>
</nav>
