<div class="row justify-content-center my-3">
  <div class="col-lg-4">
    <h1 class="d-inline-block py-3">Surveys</h1>
    <%= link_to 'New Survey', new_survey_path, class: 'btn btn-primary-blue float-right m-3' if can? :create, Survey %>

    <table class="table">
      <thead class="table-header">
        <tr>
          <th scope="col">Name</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody class="table-body">
        <% @surveys.each do |survey| %>
          <tr>
            <td><%= survey.name %></td>
            <td><%= link_to "View", survey, class: "secondary-link" %></td>
            <td><%= link_to "Nominate", new_survey_nomination_path(survey), class: "secondary-link" unless current_user.voted?(survey) || survey.winner %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
