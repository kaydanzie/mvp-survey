<div class="row justify-content-between align-items-center mt-3">
  <div class="col">
    <h1>Surveys</h1>
    <%= link_to 'New Survey', new_survey_path, class: 'btn btn-primary float-right' if current_user.admin? %>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @surveys.each do |survey| %>
          <tr>
            <td><%= survey.name %></td>
            <td><%= link_to 'Show', survey %></td>
            <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
            <td><%= link_to 'Delete', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
