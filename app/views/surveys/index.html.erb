<div class="row mt-3">
  <div class="col">
    <h1 class="d-inline">Surveys</h1>
    <%= link_to 'New Survey', new_survey_path, class: 'btn btn-secondary float-right m-3' if can? :create, Survey %>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @surveys.each do |survey| %>
          <tr>
            <td><%= survey.name %></td>
            <td><%= link_to 'Show', survey %></td>
            <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
