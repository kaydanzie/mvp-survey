<div class="row mt-3">
  <div class="col">
    <h1 class="text-center"><%= @survey.name %></h1>

    <%= form_with model: @nomination, local: true do |form| %>
      <div class="row justify-content-center">
        <div class="col-10 col-lg-4">
          <div class="form-group">
            <%= form.label "Nominee" %>
            <%= form.select :nominee_id, User.from_office(current_user.office).collect { |p| [ p.full_name, p.id ] }, {}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :comments %>
            <%= form.text_area :comments, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center pb-5">
        <div class="col-lg-2 col-sm-12 text-center"><%= form.submit 'Vote', class: 'btn btn-secondary' %></div>
        <div class="col-lg-2 col-sm-12 mt-sm-3 mt-3 mt-lg-0 text-center"><%= link_to 'Back', surveys_path, class: "btn btn-outline-secondary" %></div>
      </div>
    <% end %>
  </div>
</div>
