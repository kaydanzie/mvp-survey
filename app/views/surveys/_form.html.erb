<%= form_with model: survey, local: true do |form| %>
  <div class="row justify-content-center">
    <div class="col-10 col-lg-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>

        <div class="invalid-feedback">
          <span><%= survey.errors[:name].first %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center pb-5">
      <div class="col-12 text-center"><%= form.submit submit_button_text(survey), class: 'btn btn-primary-blue py-3 px-5' %></div>
      <div class="col-12 text-center py-3"><%= link_to 'Cancel', surveys_path, class: "tertiary-link" %></div>
    </div>
  </div>
<% end %>
