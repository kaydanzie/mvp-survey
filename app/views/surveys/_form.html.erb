<%= form_with model: survey, local: true do |form| %>
  <div class="row justify-content-center">
    <div class="col-10 col-lg-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>

        <div class="invalid-feedback">
          <span><%= survey.errors[:name].first %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center pb-5">
    <div class="col-lg-2 col-sm-12 text-center"><%= form.submit submit_button_text(survey), class: 'btn btn-secondary' %></div>
    <div class="col-lg-2 col-sm-12 mt-sm-3 mt-3 mt-lg-0 text-center"><%= link_to 'Back', surveys_path, class: "btn btn-outline-secondary" %></div>
  </div>
<% end %>
