<div class="row mt-3">
  <div class="col">
    <div class="row justify-content-center">
      <p>
        <strong>Name: </strong><%= @survey.name %>
      </p>
    </div>

    <div class="row justify-content-center mt-4">
      <div class="col text-center">
        <% if @my_nomination %>
          <p>You nominated <%= @my_nomination.nominee.full_name %></p>
        <% else %>
          <p>You haven't nominated anyone for this survey, <%= link_to "vote here", nominate_survey_path(@survey) %>!</p>
        <% end %>
      </div>
    </div>

    <div class="row justify-content-center mt-4">
      <div class="col text-center"><%= link_to 'Edit', edit_survey_path(@survey), class: "btn btn-secondary" if can? :edit, @survey %></div>
    </div>

    <div class="row justify-content-center mt-3">
      <div class="col text-center"><%= link_to 'Back', surveys_path, class: "btn btn-outline-secondary" %></div>
    </div>
  </div>
</div>
